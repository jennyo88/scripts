    	echo " ╚═════════════════════════════════════════════════╝ ""${RESET}"

	# Prompting the user for confirmation
	printf 'Do you want to clear mkv folder (y/N)? '
	read ANS

	# Checking if the user entered 'y' or 'Y' to proceed with cleanup
	if [ "$ANS" != "${ANS#[Yy]}" ]
	then
