# Color definitions
load_colors() {
    BLUE=$'\e[38;5;39m'	    	# Blue color
    ORANGE=$'\e[38;5;208m'	# Orange color
    RED=$'\e[1;31m'		# Red color (bold)
    RESET=$'\e[0m'		# Reset color attributes
}

# Calling the load_colors() function to set color variables
load_colors # Only loaded once


# Check if required commands are available

check_ydl() {
    local commands=("youtube-dl" "yt-dlp")
    local found=false

    for cmd in "${commands[@]}"; do
        if command -v "$cmd" &> /dev/null; then
            found=true
            break
        fi
    done

    if [ "$found" = false ]; then
        print_error "Error: 'youtube-dl' or 'yt-dlp' command not found."
        echo "Please make sure 'youtube-dl' or 'yt-dlp' is installed and available in your PATH."
        exit 1
    fi
}

check_ffmpeg() {
    local command="ffmpeg"

    if ! command -v "$command" &> /dev/null; then
        print_error "Error: '$command' command not found."
        echo "Please make sure '$command' is installed and available in your PATH."
        exit 1
    fi
}

prompt() {
    local prompt="$1"
    local variable="$2"

    while true; do
        printf "$prompt"
        read -r "$variable"

        # Check if the user wants to exit
        if [ "${!variable}" == "exit" ]; then
            sleep 1
            echo "Exiting..."
            # Add exit actions here if needed
            show_menu_main
        fi

        # Break the loop if input is not empty
        [ -n "${!variable}" ] && break
    done
}

# Function to pause and wait for user input
pause() {
    	echo
   	read -rp "Press ENTER to continue..." fackEnterKey
}

# Function to display goodbye message, reset colors, clear the screen, and exit
goodbye() {
    	echo -e "${RESET}"
    	clear
    	exit
}

# Function to display the main menu banner
show_banner_main() {
    	clear
    	echo -e "${BLUE}"
    	echo " ╔═════════════════════════════════════════════════╗ "
    	echo " ║          Converting Files - Service Menu        ║ "
    	echo " ╚═════════════════════════════════════════════════╝ ""${RESET}"
}

show_banner_videos() {
    	echo "${BLUE}"
    	echo " ╔═════════════════════════════════════════════════╗ "
    	echo " ║                                                 ║ "
    	echo " ║                     VIDEOS                      ║ "
    	echo " ║                                                 ║ "
    	echo " ╚═════════════════════════════════════════════════╝ ""${RESET}"
}

show_banner_subs() {
    	echo "${BLUE}"
    	echo " ╔═════════════════════════════════════════════════╗ "
    	echo " ║                                                 ║ "
    	echo " ║                      SUBS                       ║ "
    	echo " ║                                                 ║ "
    	echo " ╚═════════════════════════════════════════════════╝ ""${RESET}"
}

show_banner_clean() {
    	echo "${BLUE}"
    	echo " ╔═════════════════════════════════════════════════╗ "
   	echo " ║                                                 ║ "
    	echo " ║                    CLEAN-UP                     ║ "
    	echo " ║                                                 ║ "
    	echo " ╚═════════════════════════════════════════════════╝ ""${RESET}"
}


# Function for displaying the main menu
show_menu_main() {
    	show_banner_main
    	echo ""
    	echo ""
	echo " 1. Video scripts"
	echo " 2. Subtitle scripts"
	echo " 3. Clean-up scripts"
    	echo ""
    	echo ""
	echo " 0. Exit script"
    	echo ""

    	# Prompting the user to select an option
	echo -e "${BLUE}"
	prompt "Select: " ANS
	echo "${RESET}"

   	# Handling the user's choice using a case statement
    	case $ANS in
        	[vV]|[vV][iI][dD][eE][oO][sS]|"1")
            		show_menu_videos
            		;;
        	[sS]|[sS][uU][bB][sS]|"2")
            		show_menu_subs
           		;;
        	[cC]|[cC][lL][eE][aA][nN][uU][pP]|"3")
            		show_menu_clean
            		;;
        	"0")
            		# Exiting script
            		goodbye
            		;;
        	# Hidden options
        	[xX][2][6][5]|[1][2])
			clear
            		show_banner_videos
            		x265
            		;;
        	[mM][3][uU][8]|[1][3])
			clear
            		show_banner_videos
            		m3u8
            		;;
        	[yY][dD][lL]|[1][4])
			clear
            		show_banner_videos
            		ydl
            		;;
        	[tT][uU][bB][iI]|[1][5])
			clear
            		show_banner_videos
            		tubi
            		;;
        	[mM][eE][tT][aA][dD][aA][tT][aA]|[1][6])
			clear
            		show_banner_videos
            		metadata
            		;;
        	[pP][lL][eE][xX]|[1][7])
			clear
            		show_banner_videos
            		plex
            		;;
        	[aA][lL][lL]|[1][8])
			clear
            		show_banner_videos
            		video_sub && sleep 1
            		c_all
            		;;
        	[eE][xX][tT][rR][aA][cC][tT]|[2][2])
			clear
            		show_banner_subs
            		extract_srt
            		;;
        	[vV][tT][tT]|[2][3])
			clear
            		show_banner_subs
            		convert_srt
            		;;
        	[cC][aA][lL][lL]|[3][4])
			clear
            		show_banner_clean
            		c_all
            		;;
		# Handling invalid options
        	*)
            		echo -e "Invalid option. Please enter a valid option."
            		pause
            		show_menu_main
            		;;
    	esac
}


