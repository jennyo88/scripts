#!/usr/bin/env bash

# MAIN
# Author: Jennifer Romero
# Description: This script sources a menu-driven interface to convert files
# Version: 5.0
# Last Updated: Feb 25, 2024
# GitHub Repository: https://github.com/jennyo88/scripts/testing/main

# -----------------------------------
# COLORS
# -----------------------------------

load_colors() {
	BLUE=$'\e[38;5;39m'	# Blue color
	ORANGE=$'\e[38;5;208m'	# Orange color
	RED=$'\e[1;31m'		# Red color (bold)
	RESET=$'\e[0m'		# Reset color attributes
}

# Calling the load_colors() function to set color variables
load_colors # Only loaded once


# main_script.sh

# List of script URLs to download and source
script_urls=(
    "https://raw.githubusercontent.com/jennyo88/scripts/main/testing/error_handling"
    "https://raw.githubusercontent.com/jennyo88/scripts/main/testing/menus"
    "https://raw.githubusercontent.com/jennyo88/scripts/main/testing/functions_videos"
    "https://raw.githubusercontent.com/jennyo88/scripts/main/testing/functions_srt"
    "https://raw.githubusercontent.com/jennyo88/scripts/main/testing/functions_cleanup"
    # Add more script URLs as needed
)

# Function to source a script
source_script() {
    local script_url=$1
    local script_name=$(basename "${script_url}")

    # Create a temporary directory for scripts
    local temp_dir=$(mktemp -d)

    # Download the script into the temporary directory
    curl -sSL "${script_url}" -o "${temp_dir}/${script_name}"

    # Source the script from the temporary directory
    source "${temp_dir}/${script_name}"

    # Clean up the temporary directory
    rm -rf "${temp_dir}"
}

# Iterate through the list of script URLs and source each one
for url in "${script_urls[@]}"; do
    source_script "${url}"
done

# Now you can use functions from the sourced scripts
# Call the functions or execute any code as needed


# -----------------------------------
# STEP 1
# -----------------------------------

main_menu="0"

# -----------------------------------
# INFINITE LOOP
# -----------------------------------

while true
do
	show_banner_0 && show_menu_${main_menu}
done
